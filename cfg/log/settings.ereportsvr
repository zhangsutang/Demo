#
# 报表进程:eReportSvr
# 日志设置文件          
#

# -----------------------------------------------
# boost.log全局内核设置
# -----------------------------------------------
[Core]
DisableLogging=false

# -----------------------------------------------
# boost.log日志槽->控制台
# -----------------------------------------------
#[Sinks.1]
#Destination=Console
#Format="%TimeStamp% <%Severity%> *** %Message%"

# -----------------------------------------------
# boost.log日志槽->文件
# -----------------------------------------------
[Sinks.2]
Destination=TextFile
FileName="../log/eReportSvr_%Y-%m-%d_%5N.log"
Target="../log"
Filter="%Severity% >= debug"
RotationSize=10485760
AutoFlush=true
Format="%LineID% [%TimeStamp%] [%Severity%]\n\t%Message%\n"
Asynchronous=false
MaxSize=60000
ScanForFiles="Matching"

# -----------------------------------------------
# boost.log日志槽->系统日志
# -----------------------------------------------
#[Sinks.3]
#Destination=Syslog
#Format="%LineID% [%TimeStamp%] [%Severity%]\t%Message%"
#TargetAddress=localhost
#Filter="%Severity% >= debug"
